<!-- Header -->
<header>
    <div class="sticky-nav">
    	<a id="mobile-nav" class="menu-nav" href="#menu-nav"></a>
        
        <div id="logo">
        	<a id="goUp" href="/" title="Queue Ninja | One Place to Track All the Things">Brushed Template</a>
        </div>
        
        <nav id="menu">
        	<ul id="menu-nav">
            	<li class="current"><a href="#home-slider">Home</a></li>
                <li><a href="#about">About</a></li>
                {{#if isAuthenticated }}
	            <li>Hi {{user.name}}</li>
	            {{else}}
	            <li><a href="#" class="sign-up" data-toggle="modal" id="sign_up_link" >SIGN UP</a></li>
